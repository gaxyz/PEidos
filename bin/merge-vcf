from peidos import utils
import argparse

# Argparse first
parser = argparse.ArgumentParser( description = "Merge multiple SLiM-outputted, per-sample VCF files into one. This script removes all information from the info field of the original VCF files, so be careful.")
parser.add_argument("vcf", type = str, nargs = "+", help = "VCF files to be merged")
parser.add_argument("--outfile", type = str, help = "output filename. 'merged.vcf' by default.", default = "merged.vcf")
parser.add_argument("--rmap", type = str , help ="recombination map from SLiM output", default = None  )

args = parser.parse_args()
vcf_files=args.vcf
outfile=args.outfile


utils.merge_vcf(vcf_files, outfile)


